@model MyLibraryManagementSystem.Models.Loan
<h2>Borrow Book</h2>
<form asp-action="Borrow">
    <div class="form-group">
        <label asp-for="BookId" class="control-label"></label>
        <select asp-for="BookId" class="form-control" asp-items="ViewBag.BookId"></select>
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserId" class="control-label"></label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Borrow" class="btn btn-primary" />
    </div>
</form>