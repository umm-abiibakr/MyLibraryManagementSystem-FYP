@model MyLibraryManagementSystem.Models.Book

<h2>@Model.Title</h2>

<div class="book-details-card">
    <div class="book-image">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Title" />
        }
        else
        {
            <img src="/images/books/img10.jpg" alt="No image" />
        }
    </div>
    <div class="book-info">
        <p><strong>Author:</strong> <a asp-controller="Authors" asp-action="Details" asp-route-id="@Model.AuthorId">@Model.Author.Name</a></p>
        <p><strong>Category:</strong> @Model.Category.Name</p>
        <p><strong>Publisher:</strong> <a asp-controller="Publishers" asp-action="Details" asp-route-id="@Model.PublisherId">@Model.Publisher.Name</a></p>
        <p><strong>Language:</strong> @Model.Language</p>
        <p><strong>Total Copies:</strong> @Model.TotalCopies</p>
        <p><strong>Available Copies:</strong> @Model.AvailableCopies</p>
        <div class="book-actions">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            <a asp-action="Index" class="btn btn-primary">Back to Catalog</a>
        </div>
    </div>
</div>

<style>
    .book-details-card {
        display: flex;
        background: linear-gradient(135deg, #FDF8F0, #F4A89A);
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 6px 15px rgba(183, 110, 121, 0.2);
        max-width: 800px;
        margin: 3rem auto;
    }

    .book-image {
        width: 40%;
        height: 300px;
        overflow: hidden;
        border-radius: 15px;
    }

        .book-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .book-info {
        padding: 1.5rem;
        width: 60%;
    }

        .book-info p {
            font-size: 1.1rem;
            margin: 0.75rem 0;
        }

        .book-info a {
            color: #B76E79;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .book-info a:hover {
                color: #E88F80;
            }
</style>