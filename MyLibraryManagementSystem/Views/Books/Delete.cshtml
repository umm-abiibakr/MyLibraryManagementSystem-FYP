@model MyLibraryManagementSystem.Models.Book
<h2>Delete Book</h2>
<h3>Are you sure you want to delete this book?</h3>
<div>
    <h4>Book Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
        <dt class="col-sm-2">Author</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Author.Name)</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category.Name)</dd>
        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Publisher.Name)</dd>
        <dt class="col-sm-2">Language</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Language)</dd>
        <dt class="col-sm-2">Total Copies</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TotalCopies)</dd>
        <dt class="col-sm-2">Available Copies</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.AvailableCopies)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>