@model IEnumerable<MyLibraryManagementSystem.Models.Book>

<h2>Books</h2>
<p><a asp-action="Create" class="btn btn-primary">Create New</a></p>

<div class="book-grid">
    @foreach (var item in Model)
    {
        <div class="book-card">
            <div class="book-image">
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" alt="@item.Title" />
                }
                else
                {
                    <img src="/images/default-book.jpg" alt="No image available" />
                }
            </div>
            <div class="book-details">
                <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                <p><strong>Author:</strong> @Html.DisplayFor(modelItem => item.Author.Name)</p>
                <p><strong>Category:</strong> @Html.DisplayFor(modelItem => item.Category.Name)</p>
                <div class="publisher-info">
                    <p><strong>Publisher:</strong> @Html.DisplayFor(modelItem => item.Publisher.Name)</p>
                    @if (!string.IsNullOrEmpty(item.Publisher.LogoUrl))
                    {
                        <img src="@item.Publisher.LogoUrl" alt="@item.Publisher.Name Logo" class="publisher-logo" />
                    }
                </div>
                <p><strong>Language:</strong> @Html.DisplayFor(modelItem => item.Language)</p>
                <p><strong>Available Copies:</strong> @Html.DisplayFor(modelItem => item.AvailableCopies)</p>
                <div class="book-actions">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .book-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: flex-start;
    }

    .book-card {
        width: 300px;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
    }

    .book-image {
        width: 100%;
        height: 200px;
        overflow: hidden;
    }

        .book-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .book-details {
        padding: 15px;
        flex-grow: 1;
    }

        .book-details h3 {
            margin: 0 0 10px;
            font-size: 1.2em;
        }

        .book-details p {
            margin: 5px 0;
        }

    .publisher-info {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .publisher-logo {
        width: 40px;
        height: 40px;
        object-fit: contain;
    }

    .book-actions {
        margin-top: 10px;
    }

        .book-actions a {
            margin-right: 10px;
        }
</style>