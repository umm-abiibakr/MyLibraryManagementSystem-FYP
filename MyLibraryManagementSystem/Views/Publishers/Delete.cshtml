@model MyLibraryManagementSystem.Models.Publisher

<h2>Delete Publisher</h2>
<h3>Are you sure you want to delete this publisher?</h3>
<div>
    <h4>Publisher Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">Logo</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.LogoUrl))
            {
                <img src="@Model.LogoUrl" alt="@Model.Name Logo" style="max-width: 100px;" />
            }
            else
            {
                <span>No logo available</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>