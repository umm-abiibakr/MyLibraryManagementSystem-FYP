@model MyLibraryManagementSystem.Models.Publisher

<h2>Edit Publisher</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LogoUrl" class="control-label"></label>
        <input asp-for="LogoUrl" class="form-control" placeholder="e.g., /images/publisher-logo.png" />
        <span asp-validation-for="LogoUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}