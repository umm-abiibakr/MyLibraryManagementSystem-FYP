@model IEnumerable<MyLibraryManagementSystem.Models.Publisher>

<h2>Publishers</h2>
<p><a asp-action="Create" class="btn btn-primary">Create New</a></p>

<div class="publisher-grid">
    @foreach (var item in Model)
    {
        <div class="publisher-card">
            <div class="publisher-logo">
                @if (!string.IsNullOrEmpty(item.LogoUrl))
                {
                    <img src="@item.LogoUrl" alt="@item.Name Logo" />
                }
                else
                {
                    <img src="/images/default-publisher-logo.png" alt="No logo available" />
                }
            </div>
            <div class="publisher-details">
                <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                <div class="publisher-actions">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .publisher-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: flex-start;
    }

    .publisher-card {
        width: 250px;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
    }

    .publisher-logo {
        width: 100%;
        height: 150px;
        overflow: hidden;
    }

        .publisher-logo img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

    .publisher-details {
        padding: 15px;
        flex-grow: 1;
    }

        .publisher-details h3 {
            margin: 0 0 10px;
            font-size: 1.2em;
        }

    .publisher-actions {
        margin-top: 10px;
    }

        .publisher-actions a {
            margin-right: 10px;
        }
</style>